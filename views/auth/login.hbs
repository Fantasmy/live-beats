<a href="/">Homepage</a>
<form method="POST" action="/auth/login">

  <div class="field">
    <label>Barname</label>
    <input type="text" name="barname" />
  </div>

  <div class="field">
    <label>Password</label>
    <input type="password" name="password" />
  </div>

  {{#if errorMessage}}

  <div class="error">
    {{errorMessage}}
  </div>

  {{/if}}

  <div class="field submit">
    <button type="submit">Log-in</button>
  </div>
</form>